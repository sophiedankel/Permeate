<?xml version="1.0" encoding="UTF-8"?>

<project name="permeate" default="compile" basedir=".">
    
    <property file="build.properties" />

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete file="${lint.lib.dir}/XmlPerms.jar"
    </target>

    <target name="init" depends="clean">
        <mkdir dir="${build.classes.dir}"/>
    </target>
    
    <target name="compile" depends="init">
        <javac srcdir="src" destdir="${build.classes.dir}"/>
    </target>

    <target name="dist" depends="compile">
        <mkdir dir="${dist.dir}"
        <jar destfile="XmlPerms.jar" basedir="${dist.dir}">
            <manifest>
                <attribute name="Main-Class"
                    value="com.github.sophiedankel.permeate.XmlPermissionsDetector"/>
                <attribute name="Manifest-Version"
                	value="Manifest-Version: 1.0"/>
                <attribute name="Lint-Registry"
					value="Lint-Registry: com.github.sophiedankel.permeate.PermeateIssueRegistry"/>
            </manifest>
        </jar>
    </target>
    
    <target name="install" depends="dist">
        <move file="XmlPerms.jar" todir="${lint.lib.dir}"/>
    </target>

    <target name="run" depends="install">
        <java jar="${lint.lib.dir}/XmlPerms.jar" fork="true"/>
    </target>

</project>
